<?xml version="1.0"?>
<data_managers>
    <data_manager tool_file="data_manager/data_manager_blastn_database_builder.xml" id="data_manager_blastn_database_builder">
        <data_table name="all_fasta">
            <output>
                <column name="value" />
                <column name="dbkey" />
                <column name="name" />
                <column name="path" />
            </output>
        </data_table>
        <data_table name="blastn_databases">
            <output>
                <column name="value" />
                <column name="name" />
                <column name="path" output_ref="out_file" >
                    <move type="directory" relativize_symlinks="True">
                        <target base="${GALAXY_DATA_MANAGER_DATA_PATH}">${value}/blastn_databases</target>
                    </move>
                    <value_translation>${GALAXY_DATA_MANAGER_DATA_PATH}/${value}/blastn_databases</value_translation>
                    <value_translation type="function">abspath</value_translation>
                </column>
             </output>
        </data_table>
    </data_manager>
</data_managers>
